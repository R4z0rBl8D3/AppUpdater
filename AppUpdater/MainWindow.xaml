<Window x:Class="AppUpdater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppUpdater"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="300">
    <Grid>
        <Label Content="Updating..." HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20"/>
        <Label x:Name="StatusLbl" Content="Label" HorizontalAlignment="Left" Margin="0,62,0,0" VerticalAlignment="Top"/>
        <ProgressBar x:Name="ProgressBar" HorizontalAlignment="Left" Height="21" Margin="0,88,0,0" VerticalAlignment="Top" Width="282"/>

    </Grid>
</Window>
